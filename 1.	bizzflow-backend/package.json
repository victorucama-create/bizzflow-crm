{
  "name": "bizzflow-backend",
  "version": "2.0.0",
  "description": "Backend completo para BizzFlow CRM - Sistema de Gestão Empresarial",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:win": "set NODE_ENV=development&& nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:migrate": "node src/config/migrate.js",
    "db:seed": "node src/config/seed.js",
    "db:reset": "node src/config/reset.js",
    "backup": "node scripts/backup.js",
    "deploy": "git push && echo '✅ Backend pronto para deploy'",
    "health": "curl http://localhost:5000/health"
  },
  "keywords": [
    "crm",
    "backend",
    "api",
    "postgresql",
    "rest",
    "business",
    "management",
    "mozambique",
    "vendas",
    "clientes",
    "produtos",
    "dashboard",
    "bizzflow"
  ],
  "author": "Victor Ucama - Bizz Flow Lda",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.14.0",
    "moment": "^2.29.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/victorucama/bizzflow-backend.git"
  },
  "homepage": "https://github.com/victorucama/bizzflow-backend#readme",
  "bugs": {
    "url": "https://github.com/victorucama/bizzflow-backend/issues"
  }
}
