# Bizz Flow CRM - Configurações
NODE_ENV=development
PORT=3000

# Segurança
APP_SECRET=bizzflow-crm-secret-key-change-in-production
SESSION_SECRET=change-this-to-a-random-string-in-production

# Banco de dados
DB_PATH=./data/bizzflow.db
DB_BACKUP_PATH=./backups

# API
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# Logging
LOG_LEVEL=debug
LOG_RETENTION_DAYS=30

# Render.com (para produção)
RENDER_EXTERNAL_URL=https://bizzflow-crm.onrender.com
